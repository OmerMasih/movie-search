<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>save movie here:</h3>

    <form class="form save movie-form">
      <div class="form-group">
        <label for="save movie">save movie :</label>
        <input class="form-input" type="text" id="movie" name="save movie" />
      </div>
    </form>
  </div>
  
  {{#if movie.length}}
  <div class="col-md-6 project-list">
    <h3>Current movie:</h3>

    {{#each movie as |movie|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="//{{movie.id}}">{{movie.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{movie.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>